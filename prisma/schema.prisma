
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User{
  id             String              @id @default(cuid())
  name           String? 
  email         String          @unique
  emailVerified DateTime?
  image         String?
  password      String?             // Add password field for email auth
  accounts      Account[]
  sessions      Session[]

// Workspaces
   memberships    WorkspaceMember[]

// Pages Relations
  createdPages   Page[]              @relation("CreatedPages")
  updatedPages   Page[]              @relation("UpdatedPages")
 pageAuthorships PageAuthor[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}

// ---------------------------
// Core Application Models
// ---------------------------

model Workspace {
  id             String              @id @default(cuid())
  name           String
  slug           String              @unique
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
   authors        Author[]  
  members        WorkspaceMember[]
  pages          Page[]
  domain         WorkspaceDomain?    // One-to-one relation
  config         WorkspaceConfig?    // One-to-one relation
}

model WorkspaceDomain {
  id                String        @id @default(cuid())
  workspaceId       String        @unique
  domain            String        @unique  // e.g., blog.acme.com
  domainType        DomainType               // SUBDOMAIN or APEX
  
  // DNS & Verification
  isVerified        Boolean       @default(false)
  verificationToken String?       // For domain ownership verification
  lastVerifiedAt    DateTime?
  
  // DNS Records needed
  cnameTarget       String?       // e.g., cname.yourblogplatform.com
  aRecords          String[]      // IP addresses if using A records
  txtRecords        String[]      // For verification
  
  // SSL Certificate
  sslStatus         SslStatus     @default(PENDING)
  sslIssuedAt       DateTime?
  sslExpiresAt      DateTime?
  
  // CDN & Performance  
  cdnEndpoint       String?       // CDN URL for serving content
  cdnStatus         CdnStatus     @default(PENDING)
  
  // Setup Status
  setupStep         SetupStep     @default(DNS_PENDING)
  setupInstructions Json?         // Dynamic setup instructions
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  workspace         Workspace     @relation(fields: [workspaceId], references: [id])
}

enum DomainType {
  SUBDOMAIN   // blog.acme.com
  APEX        // acme.com
}

enum SslStatus {
  PENDING
  ACTIVE  
  EXPIRED
  FAILED
  RENEWING
}

enum CdnStatus {
  PENDING
  ACTIVE
  FAILED
  DISABLED
}

enum SetupStep {
  DNS_PENDING      // User needs to add DNS records
  DNS_VERIFYING    // Checking DNS propagation
  SSL_PENDING      // Generating SSL certificate
  CDN_SETUP        // Setting up CDN
  COMPLETED        // Everything is ready
  FAILED           // Setup failed
}

model WorkspaceMember {
  id             String              @id @default(cuid())
  role           Role
  userId         String
  workspaceId    String
  createdAt      DateTime            @default(now())

  user           User                @relation(fields: [userId], references: [id])
  workspace      Workspace           @relation(fields: [workspaceId], references: [id])

  @@unique([userId, workspaceId])
}

enum Role {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}

// Add workspace-level configuration
model WorkspaceConfig {
  id           String      @id @default(cuid())
  workspaceId  String      @unique
  
  // Page type settings
  enabledPageTypes  PageType[]
  blogCategories    Json      // Changed from String[] to Json
  helpdeskCategories String[]
  customFields      Json?
  
  // Branding & appearance
  primaryColor     String?
  logo            String?
  customDomain    String?
  
  workspace       Workspace @relation(fields: [workspaceId], references: [id])
}

// Add more page types
enum PageType {
  BLOG
  HELP_DOC
  HELPDESK
  CHANGELOG
  KNOWLEDGE_BASE
  FAQ
}

model Page {
  id             String              @id @default(cuid())
  title          String
  slug           String
  type           PageType
  description    String?
  content        Json
  status         PageStatus          @default(DRAFT)
  featuredImage  String?
  seoTitle       String?
  seoDescription String?
  readTime       Int?
  category       String?
  publishedAt    DateTime?
  pageAuthors        Author[]
  workspaceId    String
  createdById    String
  updatedById    String?

  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt

  workspace      Workspace           @relation(fields: [workspaceId], references: [id])
  createdBy      User                @relation("CreatedPages", fields: [createdById], references: [id])
  updatedBy      User?               @relation("UpdatedPages", fields: [updatedById], references: [id])

  authors        PageAuthor[]
  
  // Optional relations based on type
  blogPost         BlogPost?
  helpdeskArticle  HelpdeskArticle?
  changelogEntry   ChangelogEntry?

  @@unique([slug, workspaceId])
}


model Author{
   id        String @id @default(cuid())
  name String
  bio String?
  image String?
  email String?
  website String?
  socialLinks Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt



   workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  // Many-to-many relationship with pages
  pages Page[]

  @@unique([name, workspaceId]) 
}

model PageAuthor {
  id        String @id @default(cuid())
  pageId    String
  userId    String

  page      Page   @relation(fields: [pageId], references: [id])
  user      User   @relation(fields: [userId], references: [id])

  @@unique([pageId, userId])
}

enum PageStatus {
  DRAFT
  PUBLISHED
  SCHEDULED
}

// Type-specific models for better structure
model BlogPost {
  id           String   @id @default(cuid())
  pageId       String   @unique
  
  tags         String[]
  categories   String[]
  authorBio    String?
  estimatedReadTime Int?
  
  page         Page     @relation(fields: [pageId], references: [id])
}

model HelpdeskArticle {
  id           String   @id @default(cuid())
  pageId       String   @unique
  
  category     String
  priority     Priority
  difficulty   Difficulty
  relatedArticles String[]
  
  page         Page     @relation(fields: [pageId], references: [id])
}

model ChangelogEntry {
  id           String   @id @default(cuid())
  pageId       String   @unique
  
  version      String
  releaseDate  DateTime
  changeType   ChangeType[]
  breaking     Boolean  @default(false)
  
  page         Page     @relation(fields: [pageId], references: [id])
}

enum Priority {
  LOW
  MEDIUM  
  HIGH
  URGENT
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum ChangeType {
  FEATURE
  BUGFIX
  IMPROVEMENT
  BREAKING
  DEPRECATED
}

