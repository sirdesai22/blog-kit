generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String            @id @default(cuid())
  name            String?
  email           String            @unique
  emailVerified   DateTime?
  image           String?
  password        String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  accounts        Account[]
  createdPages    Page[]            @relation("CreatedPages")
  updatedPages    Page[]            @relation("UpdatedPages")
  pageAuthorships PageAuthor[]
  sessions        Session[]
  memberships     WorkspaceMember[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Workspace {
  id        String            @id @default(cuid())
  name      String
  slug      String            @unique
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  authors   Author[]
  pages     Page[]
  blogPosts BlogPost[]        // Add this line
  config    WorkspaceConfig?
  domain    WorkspaceDomain?
  members   WorkspaceMember[]
}

model WorkspaceDomain {
  id                String     @id @default(cuid())
  workspaceId       String     @unique
  domain            String     @unique
  domainType        DomainType
  isVerified        Boolean    @default(false)
  verificationToken String?
  lastVerifiedAt    DateTime?
  cnameTarget       String?
  aRecords          String[]
  txtRecords        String[]
  sslStatus         SslStatus  @default(PENDING)
  sslIssuedAt       DateTime?
  sslExpiresAt      DateTime?
  cdnEndpoint       String?
  cdnStatus         CdnStatus  @default(PENDING)
  setupStep         SetupStep  @default(DNS_PENDING)
  setupInstructions Json?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  workspace         Workspace  @relation(fields: [workspaceId], references: [id])
}

model WorkspaceMember {
  id          String    @id @default(cuid())
  role        Role
  userId      String
  workspaceId String
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  workspace   Workspace @relation(fields: [workspaceId], references: [id])

  @@unique([userId, workspaceId])
}

model WorkspaceConfig {
  id                 String     @id @default(cuid())
  workspaceId        String     @unique
  enabledPageTypes   PageType[]
  blogCategories     Json
  helpdeskCategories String[]
  customFields       Json?
  primaryColor       String?
  logo               String?
  customDomain       String?
  blogTags           Json?
  workspace          Workspace  @relation(fields: [workspaceId], references: [id])
}

// BLOG PAGE

model Page {
  id              String           @id @default(cuid())
  title           String
  slug            String
  type            PageType
  description     String?
  content         Json
  status          PageStatus       @default(DRAFT)
  featuredImage   String?
  seoTitle        String?
  seoDescription  String?
  readTime        Int?
  category        String?
  publishedAt     DateTime?
  workspaceId     String
  createdById     String
  updatedById     String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
 blogPosts       BlogPost[] 
  changelogEntry  ChangelogEntry?
  helpdeskArticle HelpdeskArticle?
  createdBy       User             @relation("CreatedPages", fields: [createdById], references: [id])
  updatedBy       User?            @relation("UpdatedPages", fields: [updatedById], references: [id])
  workspace       Workspace        @relation(fields: [workspaceId], references: [id])
  authors         PageAuthor[]
  pageAuthors     Author[]         @relation("AuthorToPage")

  @@unique([slug, workspaceId])
}

model Author {
  id          String    @id @default(cuid())
  name        String
  bio         String?
  image       String?
  email       String?
  website     String?
  socialLinks Json?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  pages       Page[]    @relation("AuthorToPage")
  blogPosts   BlogPost[] // Add this relation

  @@unique([name, workspaceId])
}

model PageAuthor {
  id     String @id @default(cuid())
  pageId String
  userId String
  page   Page   @relation(fields: [pageId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@unique([pageId, userId])
}

model BlogPost {
  id                String   @id @default(cuid())
  
  // Core Content
  title             String
  slug              String
  content           Json     // PlateJS content
  htmlContent       String?  // Rendered HTML for faster display
  excerpt           String?  // Short summary
  mdx               String?
  // Publishing
  status            PostStatus @default(DRAFT)
  publishedAt       DateTime?
  scheduledFor      DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // SEO
  metaTitle         String?
  metaDescription   String?
  canonicalUrl      String?
  
  // Media
  featuredImage     String?
  featuredImageAlt  String?
  gallery           String[] // Additional images
  
  // Organization
  tags              String[]
  categories        String[]
  featured          Boolean  @default(false)
  pinned            Boolean  @default(false)
  
  // Analytics
  views             Int      @default(0)
  readTime          Int?     // Estimated read time in minutes
  
  // Author & Workspace Relations
  authorId          String?  // Primary author
  coAuthorIds       String[] // Additional authors
  workspaceId       String
  
  // Blog Publication Relation - REMOVE @unique here
  pageId            String   // Multiple blog posts can belong to same blog publication
  estimatedReadTime Int?     // Duplicate of readTime for compatibility
  authorBio         String?
  
  // Relations
  page              Page      @relation(fields: [pageId], references: [id], onDelete: Cascade)
  author            Author?   @relation(fields: [authorId], references: [id])
  workspace         Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  @@unique([slug, workspaceId]) // Slug should be unique within workspace
  @@index([status, publishedAt])
  @@index([workspaceId, status])
  @@index([authorId])
  @@index([pageId]) // Add index for better query performance
}

model HelpdeskArticle {
  id              String     @id @default(cuid())
  pageId          String     @unique
  category        String
  priority        Priority
  difficulty      Difficulty
  relatedArticles String[]
  page            Page       @relation(fields: [pageId], references: [id])
}

model ChangelogEntry {
  id          String       @id @default(cuid())
  pageId      String       @unique
  version     String
  releaseDate DateTime
  changeType  ChangeType[]
  breaking    Boolean      @default(false)
  page        Page         @relation(fields: [pageId], references: [id])
}

enum DomainType {
  SUBDOMAIN
  APEX
}

enum SslStatus {
  PENDING
  ACTIVE
  EXPIRED
  FAILED
  RENEWING
}

enum CdnStatus {
  PENDING
  ACTIVE
  FAILED
  DISABLED
}

enum SetupStep {
  DNS_PENDING
  DNS_VERIFYING
  SSL_PENDING
  CDN_SETUP
  COMPLETED
  FAILED
}

enum Role {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}

enum PageType {
  BLOG
  HELP_DOC
  HELPDESK
  CHANGELOG
  KNOWLEDGE_BASE
  FAQ
}

enum PageStatus {
  DRAFT
  PUBLISHED
  SCHEDULED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum ChangeType {
  FEATURE
  BUGFIX
  IMPROVEMENT
  BREAKING
  DEPRECATED
}

// Add PostStatus enum
enum PostStatus {
  DRAFT
  PUBLISHED
  SCHEDULED
  ARCHIVED
  DELETED
}
